<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screen_padding"
    tools:context="com.bigboibanks.LogIn">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:text="@string/admin_terminal"
        android:layout_alignBottom="@+id/teller"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/teller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teller_terminal"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/admin"
        android:layout_marginBottom="36dp" />

    <Button
        android:id="@+id/atm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atm"
        android:layout_above="@+id/admin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputId"
        android:hint="@string/prompt_id"
        android:layout_below="@+id/title"/>

    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputPassword"
        android:hint="@string/prompt_password"
        android:layout_below="@+id/inputId"/>

</RelativeLayout>
